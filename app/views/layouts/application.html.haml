!!! 5
%html
  %head
    %title Void
    = stylesheet_link_tag "application", media: "all", 
      "data-turbolinks-track" => true
    = javascript_include_tag "application", "data-turbolinks-track" => true
    = csrf_meta_tags
  %body{class: "#{params[:controller]} #{params[:controller]}-#{params[:action]}"}

    .row.header
      .col-lg-4.col-lg-offset-7
        .logo
          =link_to root_path do
            %img{src: asset_path('logo_200x89.png'), title: "3Void"}
        %h3.page-title
          =content_for?(:page_title) ? yield(:page_title) : "A page"
    .row.navigation
      .col-lg-10.col-lg-offset-1
        .navbar
          %ul.nav.navbar-nav
            %li
              %a{href: "/", title: "Home"}
                Home
            %li 
              %a{href: marticles.root_path, title: "Articles"}
                Articles
            %li 
              %a{href: "#", title: "Projects"}
                Projects
            %li 
              %a{href: "#", title: "Academic"}
                Academic


    .row
      .col-lg-10.col-lg-offset-1
        .page-content
          =yield
    .row
      .col-lg-11.col-lg-offset-1
        =yield(:footer)
